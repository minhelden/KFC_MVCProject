                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("DangXuat","Admin")"><i class="fas fa-sign-out-alt"></i>ĐĂNG XUẤT</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-9 mg-r-10">
                <div class="content_top">
                    <h2 class="h2_css">ADMIN PAGE</h2>
                </div>
                <div class="content_bot">
                    <div>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
