    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <link href="~/Asset/css/Admin.css" rel="stylesheet" />


</head>

<body style=" background-image: url(https://wallpapercave.com/wp/wp1939512.jpg); height: 100%;">
    <div class="container">
        <div class="row mt-4">
            <div class="col-3">
                <div class="border_nav">
                    <ul class="nav flex-column css_navbar">
                        <li class="nav-item unset_boderbottom">
                            <a class="nav-link active img_logo_kfc" aria-current="page" href="#">
                                <img src="~/Asset/Image/kfc-logo.png" width="150">
                            </a>
                        </li>
                        <li class="nav-item unset_boderbottom">
                            <a class="nav-link disabled" href="#"><i class="fas fa-list-ul"></i> QUẢN LÝ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " aria-current="page" href="@Url.Action("ShowCategory","Admin")"><i class="fas fa-bookmark"></i> DANH MỤC</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ShowReceipt","Admin")"><i class="fas fa-receipt"></i>HÓA ĐƠN</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ShowEmployee","Admin")"><i class="fas fa-user-edit"></i>NHÂN VIÊN</a>
