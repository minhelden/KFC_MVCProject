@model IEnumerable<ILoveKFC.Models.PRODUCT>

@{
    ViewBag.Title = "ShowAllProduct";
    Layout = "~/Views/Shared/_LayoutKFC.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link rel="stylesheet" href="~/Asset/css/">
<link rel="stylesheet" href="~/Assets/Css/all.min.css">
<div class="sp_title">
    <h3>@ViewBag.tenDM</h3>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-6 col-lg-4" style="margin: 10px 0;">
            <div class="card" style=" box-shadow: 0px 2px 2px rgba(0,0,0,0.6);">
                <div class="sp_slider">
                    <a href="#">
                        <img src="~/Asset/Image/@item.IMAGE_PRODUCT" class="card-img-top" alt="@item.NAME_PRODUCT">
                    </a>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><span>@item.NAME_PRODUCT</span></h5>
                    <h6 class="card-price"><span>@string.Format("{0:0,0}", item.COST)Đ</span><em class="old_price"></em></h6>
                    <div class="card-text">
                        @if (item.DESCRIBE.Length > 40)
                        {
                            <p class="card-text" title="@item.DESCRIBE">@item.DESCRIBE.Substring(0, 40)...</p>
                        } 
                        else
                        {
                            <p class="card-text">@item.DESCRIBE</p>
                        }
                    </div>
                    @*<div class="icon-down">
                            <a data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample"><i class="fas fa-chevron-down"></i></a>
                        </div>*@
                    <div class="row_btn">
                        <div class="row_btn_item">
                            <a href="@Url.Action("ShowDetailProduct", "Product", new { @masp = item.ID_PRODUCT })" class="btn btn_custom ">Chi Tiết</a>
                        </div>
                        <div class="row_btn_item">
                            <a href="/ShoppingCart/AddToCart/@item.ID_PRODUCT" class="btn btn_add">Đặt hàng</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }

</div>



